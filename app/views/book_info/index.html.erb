<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Book Info</title>
  <%= stylesheet_link_tag 'book_info', media: 'all' %>
</head>
<body>
<div class="container">
  <div class="book-info">
    <div class="book-image">
      <img class="book-image" src="<%= @book.Image_url %>" alt="Book Cover">
    </div>
    <div class="book-details">
      <h1 class="book-title"><%= @book.Title %></h1>
      <h2 class="book-author"><%= @book.Author %></h2>
      <p class="book-description"><%= @book.Description %> </p>
      <div class="book-metadata">
        <div class="book-metadata-item">
          <strong>Genres:</strong> <%= @book.Genres.join(", ") %>
        </div>
        <div class="book-metadata-item">
          <strong>Tags:</strong> <%= @book.Tags.join(", ") %>
        </div>
      </div>
      <p class="book-price"> <%= number_to_currency(@book.Price) %></p>
      <a href="#" class="btn-buy">Buy Now</a>
    </div>
  </div>
</div>
</body>
</html>
